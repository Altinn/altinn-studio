{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Altinn Studio App Template ManifestDescriptor",
    "type": "object",
    "additionalProperties": false,
    "required": [ "id", "publisherId", "name", "description", "contentPath" ],
    "properties": {
        "id": {
            "type": "string",
            "minLength": 5
        },
        "publisherId": {
            "type": "string",
            "minLength": 3
        },

        "name": {
            "type": "object",
            "required": [ "nb" ],
            "properties": {
                "nb": {
                    "type": "string",
                    "minLength": 5
                }
            },
            "additionalProperties": { "type": "string" }
        },

        "description": {
            "type": "object",
            "required": [ "nb" ],
            "properties": {
                "nb": {
                    "type": "string",
                    "minLength": 20
                }
            },
            "additionalProperties": {
                "type": "string",
                "minLength": 20
            }
        },
        "contentPath": {
            "type": "string",
            "minLength": 1,
            "description": "Relative folder path under the template repository root folder (org/org-content/templates/). No absolute paths, no drive/UNC, no '..'.",
            "pattern": "^(?!/)(?!\\\\\\\\)(?!.*\\\\)(?!.*:)(?!.*(^|/)\\.\\.(/|$))[A-Za-z0-9._-]+(?:/[A-Za-z0-9._-]+)*/?$"
        },

        "remove": {
            "type": "array",
            "description": "Optional list of relative repo paths/globs from application repo root. No absolute paths, no drive/UNC, no '..'.",
            "items": {
                "type": "string",
                "minLength": 1,
                "pattern": "^(?!/)(?!\\\\\\\\)(?!.*\\\\)(?!.*:)(?!.*(^|/)\\.\\.(/|$))[A-Za-z0-9._\\-/*?\\[\\]{}!]+(?:/[A-Za-z0-9._\\-/*?\\[\\]{}!]+)*/?$"
            }
        }
    }
}

<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AssemblyName>Altinn.App</AssemblyName>
    <RootNamespace>Altinn.App</RootNamespace>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Config\UI\**" />
    <Content Remove="Config\UI\**" />
    <EmbeddedResource Remove="Config\UI\**" />
    <None Remove="Config\UI\**" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\css\" />
    <Folder Include="wwwroot\script\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Altinn.App.Api" Version="1.0.19-alpha" />
    <PackageReference Include="Altinn.App.Common" Version="1.0.19-alpha" />
    <PackageReference Include="Altinn.App.PlatformServices" Version="1.0.19-alpha" />
    <PackageReference Include="Altinn.Common.PEP" Version="1.0.15-alpha" />
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="3.1.0" />
    <PackageReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Design" Version="3.1.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="config\process\process.bpmn">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="JWTValidationCert.cer">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="ui\RuleHandler.js">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>

{
  "plugins": ["testcafe"],
  "parser": "babel-eslint",
  "extends": "plugin:testcafe/recommended",
  "rules": {
    "eol-last": "error",
    "indent": ["warn", 2],
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "semi": ["warn", "always", { "omitLastInOneLineBlock": true }]
  }
}

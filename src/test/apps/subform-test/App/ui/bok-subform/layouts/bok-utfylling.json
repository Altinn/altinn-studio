{
  "$schema": "https://altinncdn.no/toolkits/altinn-app-frontend/4/schemas/json/layout/layout.schema.v1.json",
  "data": {
    "hidden": false,
    "layout": [
      {
        "size": "L",
        "id": "bok-header",
        "type": "Header",
        "textResourceBindings": {
          "title": "bok-header.title"
        }
      },
      {
        "id": "bok-blurb",
        "type": "Paragraph",
        "textResourceBindings": {
          "title": "bok-blurb.title"
        }
      },
      {
        "dataModelBindings": {
          "simpleBinding": "Tittel"
        },
        "id": "bok-tittel",
        "type": "Input",
        "textResourceBindings": {
          "title": "bok-tittel.title"
        },
        "required": true
      },
      {
        "dataModelBindings": {
          "simpleBinding": "Serie"
        },
        "id": "bok-serie",
        "type": "Input",
        "textResourceBindings": {
          "title": "bok-serie.title"
        },
        "required": false
      },
      {
        "dataModelBindings": {
          "simpleBinding": "Forfatter"
        },
        "id": "bok-forfatter",
        "type": "Input",
        "textResourceBindings": {
          "title": "bok-forfatter.title"
        },
        "required": true
      },
      {
        "dataModelBindings": {
          "simpleBinding": "Publikasjonsaar"
        },
        "id": "bok-publikasjonsaar",
        "type": "Input",
        "textResourceBindings": {
          "title": "bok-publikasjonsaar.title"
        },
        "formatting": {
          "number": {
            "format": "####"
          }
        },
        "required": true
      },
      {
        "id": "button-group-bok1",
        "type": "ButtonGroup",
        "children": [
          "subform-bok-cancelButton",
          "subform-bok-nextButton"
        ]
      },
      {
        "id": "subform-bok-cancelButton",
        "type": "CustomButton",
        "textResourceBindings": {
          "title": "general.cancel"
        },
        "actions": [
          {
            "type": "ClientAction",
            "id": "closeSubform"
          }
        ],
        "buttonSize": "sm",
        "buttonStyle": "secondary",
        "buttonColor": "second"
      },
      {
        "id": "subform-bok-nextButton",
        "type": "CustomButton",
        "textResourceBindings": {
          "title": "general.next"
        },
        "actions": [
          {
            "type": "ClientAction",
            "id": "nextPage",
            "validation": {
              "page": "all",
              "show": [
                "All"
              ]
            }
          }
        ],
        "buttonStyle": "primary",
        "buttonColor": "first",
        "buttonSize": "sm"
      }
    ]
  }
}
{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "./dist/",
    "sourceMap": true,
    "rootDir": "../..",
    "paths": {
      "app-shared/*": [
        "../../shared/*"
      ],
    },
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules"
  ]
}

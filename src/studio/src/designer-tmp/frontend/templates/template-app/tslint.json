{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-eslint-rules"
  ],
  "jsRules": {},
  "rules": {
    "brace-style": [
      true,
      "1tbs"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "jsx-no-multiline-js": false,
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^import |^export {(.*?)}"
      }
    ],
    "no-console": [
      true,
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "no-submodule-imports": false,
    "object-literal-sort-keys": false,
    "quotemark": {
      "options": [
        "single",
        "avoid-escape",
        "jsx-single"
      ]
    },
    "variable-name": [
      true,
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore",
      "ban-keywords"
    ]
  },
  "rulesDirectory": [],
  "exclude": [
    "node_modules"
  ]
}

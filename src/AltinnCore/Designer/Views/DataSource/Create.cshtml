@using Microsoft.AspNetCore.Mvc.ModelBinding
@model AltinnCore.Common.Models.DataSourceCreateViewModel

@{
    ViewBag.Title = "Ny datakilde";
    var errors = ViewBag.ErrorMessages as IList<ModelError>;
}

@if (errors != null && errors.Any())
{
    foreach (var error in errors)
    {
        <div class="alert alert-danger">@error.ErrorMessage</div>
    }
}

<form asp-controller="DataSource" asp-action="Create" method="POST">
    <div class="form-group">
        <label asp-for="Url">URL</label>
        <input asp-for="Url" class="form-control" autocomplete="off">
    </div>
    <div class="form-group">
        <label asp-for="Description">Beskrivelse</label>
        <input asp-for="Description" class="form-control" autocomplete="off"/>
    </div>
    <div class="text-md-center">
        <button class="btn btn-primary" type="submit">Lag ny datakilde</button>
        <a asp-action="Index" class="btn btn-default">Avbryt</a>
    </div>
</form>

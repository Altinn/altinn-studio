@{
  Layout = "_FormBuilderLayout";
  ViewBag.Title = "Altinn Studio";
}

@section scripts {
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500" rel="stylesheet">
  <script src="https://use.fortawesome.com/ed31cded.js"></script>
  <script src="https://use.fortawesome.com/df832575.js"></script>
  <script src="https://use.fortawesome.com/bdabc5c1.js"></script>
  <script src="~/designer/js/lib/bootstrap.min.js" asp-append-version="true"></script>
  <script src="~/designer/js/lib/jquery.min.js" asp-append-version="true"></script>
  <script src="~/designer/js/jqueryextensions/bootstrap-treeview.extension.js" asp-append-version="true"></script>
  <script src="~/designer/js/lib/monaco-editor/vs/loader.js" asp-append-version="true"></script>
}

<!-- These imports are imported multiple times, we will need to clean up afterwards -->
<link rel="stylesheet" href="~/designer/css/bootstrap.min.css">
<link rel="stylesheet" href="~/designer/css/react/service-development.css">

<div id="root" class="media-body flex-column d-flex"></div>
<script src="~/designer/js/react/service-development.js" type="text/javascript"></script>
<div id="hiddenScriptForDev" hidden="hidden"></div>

<!-- These imports are only needed when running the code locally, as they are only build in dev mode -->
<script>
  $(document).ready(function () {
    if (window.location.hostname === "altinn3.no") {
      var moduleCount = 3;
      var head = document.getElementsByTagName("head").item(0);
      for (let i = 0; i <= moduleCount; i++) {
        var script = document.createElement("script");
        script.setAttribute("type", "text/javascript");
        script.setAttribute("src", "http://altinn3.no/designer/js/react/" + i + ".service-development.js");
        head.appendChild(script);
      }
    }
   });
</script>



    <ProjectGuid>{D9F6DAB7-E921-44B6-A1A6-5796DCAE0D07}</ProjectGuid>
  </PropertyGroup>

  <PropertyGroup>
    <Version>2.5.1</Version>
    <Description>Altinn.Platform.Storage.Interface is a package for models used by platform storage</Description>

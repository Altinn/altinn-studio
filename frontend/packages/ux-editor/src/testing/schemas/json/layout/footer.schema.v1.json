{
  "$id": "https://altinncdn.no/schemas/json/layout/footer.schema.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Altinn footer",
  "description": "Schema that describes the footer configuration for Altinn applications.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": true,
    "footer": {
      "title": "The footer",
      "description": "Array of components to be presented in the footer.",
      "type": "array",
      "items": {
        "$ref": "#/$defs/footerLayout"
      }
    }
  },
  "$defs": {
    "footerLayout": {
      "properties": {
        "type": {
          "type": "string",
          "title": "Type",
          "description": "The component type.",
          "enum": [
            "Email",
            "Link",
            "Phone",
            "Text"
          ]
        }
      },
      "required": [
        "type"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "Email"
              }
            }
          },
          "then": {
            "$ref": "#/$defs/emailComponent"
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "Link"
              }
            }
          },
          "then": {
            "$ref": "#/$defs/linkComponent"
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "Phone"
              }
            }
          },
          "then": {
            "$ref": "#/$defs/phoneComponent"
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "Text"
              }
            }
          },
          "then": {
            "$ref": "#/$defs/textComponent"
          }
        }
      ]
    },
    "icon": {
      "type": "string",
      "title": "Icon",
      "description": "Icon to show next to the component.",
      "enum": [
        "information",
        "email",
        "phone"
      ]
    },
    "title": {
      "type": "string",
      "title": "Title",
      "description": "The text to display. Can be a text resource."
    },
    "emailComponent": {
      "additionalProperties": false,
      "properties": {
        "type": true,
        "title": {
          "$ref": "#/$defs/title"
        },
        "target": {
          "type": "string",
          "title": "Target",
          "description": "The email to link to. Can be a text resource."
        }
      },
      "required": [
        "title",
        "target"
      ]
    },
    "linkComponent": {
      "additionalProperties": false,
      "properties": {
        "type": true,
        "title": {
          "$ref": "#/$defs/title"
        },
        "target": {
          "type": "string",
          "title": "Target",
          "description": "The URL to link to. Can be a text resource."
        },
        "icon": {
          "$ref": "#/$defs/icon"
        }
      },
      "required": [
        "title",
        "target"
      ]
    },
    "phoneComponent": {
      "additionalProperties": false,
      "properties": {
        "type": true,
        "title": {
          "$ref": "#/$defs/title"
        },
        "target": {
          "type": "string",
          "title": "Target",
          "description": "The phone number to link to. Can be a text resource."
        }
      },
      "required": [
        "title",
        "target"
      ]
    },
    "textComponent": {
      "additionalProperties": false,
      "properties": {
        "type": true,
        "title": {
          "$ref": "#/$defs/title"
        }
      },
      "required": [
        "title"
      ]
    }
  }
}

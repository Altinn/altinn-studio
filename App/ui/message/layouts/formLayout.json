{
  "$schema": "https://altinncdn.no/toolkits/altinn-app-frontend/4/schemas/json/layout/layout.schema.v1.json",
  "data": {
    "layout": [
      {
        "id": "altinnLogo",
        "type": "Image",
        "textResourceBindings": {
          "altTextImg": "Altinn logo",
          "help": "Altinn logo"
        },
        "image": {
          "src": {
            "nb": "/ttd/frontend-test/images/altinn-logo.svg"
          },
          "width": "100%",
          "align": "center"
        },
        "grid": {
          "xs": 12
        }
      },
      {
        "id": "messageTitle",
        "type": "Paragraph",
        "textResourceBindings": {
          "title": "messageTitle",
          "help": "messageTitleHelp"
        }
      },
      {
        "id": "messageBody",
        "type": "Paragraph",
        "textResourceBindings": {
          "title": "messageBody"
        }
      },
      {
        "id": "messageAttachments",
        "type": "AttachmentList",
        "textResourceBindings": {
          "title": "messageAttachments"
        },
        "dataTypeIds": ["fileUpload-message"]
      },
      {
        "id": "startAgain",
        "type": "Paragraph",
        "textResourceBindings": {
          "title": "startAgain"
        }
      },
      {
        "id": "falsyRadioButton",
        "type": "RadioButtons",
        "textResourceBindings": {
          "title": "Radiobutton with falsy value"
        },
        "dataModelBindings": {
          "simpleBinding": "IsSomeValue"
        },
        "required": true,
        "options": [
          {
            "label": "True",
            "value": true
          },
          {
            "label": "False",
            "value": false
          }
        ],
        "hidden": true
      },
      {
        "id": "falsyInput",
        "type": "Input",
        "textResourceBindings": {
          "title": "Input with falsy value"
        },
        "dataModelBindings": {
          "simpleBinding": "SomeNumberValue"
        },
        "required": true,
        "hidden": true
      },
      {
        "id": "buttonGroup",
        "type": "ButtonGroup",
        "children": ["taskChooserButton", "sendInButton"]
      },
      {
        "id": "taskChooserButton",
        "type": "CustomButton",
        "textResourceBindings": {
          "title": "Velg neste steg"
        },
        "actions": [
          {
            "type": "ClientAction",
            "id": "navigateToPage",
            "metadata": { "page": "taskChooser" }
          }
        ],
        "buttonStyle": "secondary"
      },
      {
        "id": "sendInButton",
        "type": "Button",
        "textResourceBindings": {
          "title": "Send inn"
        }
      }
    ]
  }
}


{
  "$schema": "https://altinncdn.no/schemas/json/layout/layout.schema.v1.json",
  "data": {
    "layout": [
      {
        "id": "altinnLogo",
        "type": "Image",
        "textResourceBindings": {
          "altTextImg": "Altinn logo",
          "help": "Altinn logo"
        },
        "image":{
          "src":{
            "nb": "/ttd/frontend-test/images/altinn-logo.svg"            
          },
          "width": "100%",
          "align": "left"          
        },
        "grid": {
          "xs": 12
        }
      }, {
        "id": "messageTitle",

{
  "$schema": "https://altinncdn.no/schemas/json/layout/layout.schema.v1.json",
  "data": {
    "hidden": ["not", ["authContext", "sign"]],
    "layout": [
      {
        "id": "Panel-confirm1",
        "type": "Panel",
        "textResourceBindings": {
          "title": "Form.Panel-confirm1.title",
          "body": "Form.Panel-confirm1.body"
        },
        "variant": "warning"
      },
      {
        "id": "Input-name",
        "type": "Input",
        "textResourceBindings": {
          "title": "Form.Input-name.title",
          "description": "Form.Input-name.description"
        },
        "dataModelBindings": {
          "simpleBinding": "form.name"
        },
        "renderAsSummary": true,
        "autocomplete": "organization",
        "grid": {
          "xs": 12,
          "sm": 6
        }
      },
      {
        "id": "Input-orgNumber",
        "type": "Input",
        "textResourceBindings": {
          "title": "Form.Input-orgNumber.title",
          "description": "Form.Input-orgNumber.description"
        },
        "dataModelBindings": {
          "simpleBinding": "form.orgNumber"
        },
        "renderAsSummary": true,
        "autocomplete": "off",
        "grid": {
          "xs": 12,
          "sm": 6
        }
      },
      {
        "id": "Input-year",
        "type": "Input",
        "textResourceBindings": {
          "title": "Form.Input-year.title",
          "description": "Form.Input-year.description"
        },
        "dataModelBindings": {
          "simpleBinding": "form.year"
        },
        "renderAsSummary": true,
        "autocomplete": "off",
        "formatting": {
          "align": "right",
          "number": {
            "format": "####",
            "mask": "_",
            "allowEmptyFormatting": true
          }
        },
        "grid": {
          "xs": 12,
          "sm": 6
        }
      },
      {
        "id": "Input-income",
        "type": "Input",
        "textResourceBindings": {
          "title": "Form.Input-income.title",
          "description": "Form.Input-income.description"
        },
        "dataModelBindings": {
          "simpleBinding": "form.income"
        },
        "renderAsSummary": true,
        "autocomplete": "off",
        "formatting": {
          "align": "right",
          "number": {
            "allowNegative": false,
            "decimalScale": 0,
            "suffix": " 000 NOK",
            "thousandSeparator": " "
          }
        },
        "grid": {
          "xs": 12,
          "sm": 6
        }
      },
      {
        "id": "PanelGroupConfirm",
        "type": "Group",
        "children": ["Paragraph-confirm", "ButtonGroup"],
        "groupingIndicator": "panel"
      },
      {
        "id": "Paragraph-confirm",
        "type": "Paragraph",
        "textResourceBindings": {
          "title": "Confirm.Paragraph-confirm.title"
        }
      },
      {
        "id": "ButtonGroup",
        "type": "ButtonGroup",
        "children": ["RejectButton", "SigningButton"]
      },
      {
        "id": "RejectButton",
        "type": "ActionButton",
        "textResourceBindings": {
          "title": "Avsl√•"
        },
        "action": "reject",
        "buttonStyle": "secondary"
      },
      {
        "id": "SigningButton",
        "type": "ActionButton",
        "textResourceBindings": {
          "title": "Signer"
        },
        "action": "sign",
        "buttonStyle": "primary"
      }
    ]
  }
}
